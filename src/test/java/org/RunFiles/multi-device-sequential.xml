<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Multi Device Sequential Tests" verbose="2">
    <listeners>
        <listener class-name="org.fg.utils.Listeners"/>
    </listeners>

    <!-- Global test parameters -->
    <parameter name="platformName" value="Android" />

    <!-- Samsung Galaxy S23 Ultra -->
    <test name="Galaxy S23 Ultra Test">
        <parameter name="deviceName" value="Galaxy S23 Ultra" />
        <parameter name="platformVersion" value="13.0" />
        <classes>
            <class name="org.pfg.LoginLogoutFlow">
                <methods>
                    <include name="testLoginToLogoutFlow"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- OnePlus 11 -->
    <test name="OnePlus 11 Test">
        <parameter name="deviceName" value="OnePlus 11" />
        <parameter name="platformVersion" value="13.0" />
        <classes>
            <class name="org.pfg.LoginLogoutFlow">
                <methods>
                    <include name="testLoginToLogoutFlow"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Google Pixel 8 -->
    <test name="Pixel 8 Test">
        <parameter name="deviceName" value="Pixel 8" />
        <parameter name="platformVersion" value="14.0" />
        <classes>
            <class name="org.pfg.LoginLogoutFlow">
                <methods>
                    <include name="testLoginToLogoutFlow"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Samsung Galaxy S24 Ultra -->
    <test name="Galaxy S24 Ultra Test">
        <parameter name="deviceName" value="Galaxy S24 Ultra" />
        <parameter name="platformVersion" value="14.0" />
        <classes>
            <class name="org.pfg.LoginLogoutFlow">
                <methods>
                    <include name="testLoginToLogoutFlow"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- OnePlus 10 Pro -->
    <test name="OnePlus 10 Pro Test">
        <parameter name="deviceName" value="OnePlus 10 Pro" />
        <parameter name="platformVersion" value="12.0" />
        <classes>
            <class name="org.pfg.LoginLogoutFlow">
                <methods>
                    <include name="testLoginToLogoutFlow"/>
                </methods>
            </class>
        </classes>
    </test>

</suite> 