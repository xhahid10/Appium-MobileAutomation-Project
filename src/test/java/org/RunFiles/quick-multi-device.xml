<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Quick Multi Device Test" verbose="2">
    <listeners>
        <listener class-name="org.fg.utils.Listeners"/>
    </listeners>

    <!-- Global test parameters -->
    <parameter name="platformName" value="Android" />

    <!-- Samsung Galaxy S23 -->
    <test name="Galaxy S23 Test">
        <parameter name="deviceName" value="Galaxy S23" />
        <parameter name="platformVersion" value="13" />
        <classes>
            <class name="org.pfg.LoginLogoutFlow">
                <methods>
                    <include name="testLoginToLogoutFlow"/>
                </methods>
            </class>
        </classes>
    </test>

    <!-- Samsung Galaxy S21 -->
    <test name="Galaxy S21 Test">
        <parameter name="deviceName" value="Galaxy S21" />
        <parameter name="platformVersion" value="11" />
        <classes>
            <class name="org.pfg.LoginLogoutFlow">
                <methods>
                    <include name="testLoginToLogoutFlow"/>
                </methods>
            </class>
        </classes>
    </test>

</suite> 